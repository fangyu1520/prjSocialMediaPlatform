@model prjSocialMediaPlatform.Models.Register

@{
    ViewBag.Title = "用戶註冊";
}

<style>
    .form-group.d-flex label {
        min-width: 100px;
        white-space: nowrap;
    }

    .form-group.d-flex input {
        flex-grow: 1;
    }

    hr {
        margin-bottom: 30px;
    }

    textarea.form-control {
        width: 100%;
        height: 150px;
    }

    p{
        color:red;
    }
</style>

<h2>用戶註冊</h2>

<hr />

<form asp-action="Register" method="post">

    @Html.AntiForgeryToken()

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="UserName">用戶名稱</label>
        <input name="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="UserID">手機號碼</label>
        <input name="UserID" type="number" class="form-control" />
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="Email">電子郵件</label>
        <input name="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="PasswordHash">密碼</label>
        <input name="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="CoverImage">封面圖片</label>
        <input name="CoverImage" class="form-control" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="Biography">自我簡介</label>
        <textarea name="Biography" class="form-control"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-dark mt-3">註冊</button>
    
    <p>@ViewBag.Message</p>

</form>