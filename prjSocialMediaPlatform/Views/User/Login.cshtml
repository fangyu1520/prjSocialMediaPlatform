@model prjSocialMediaPlatform.Models.LogIn

@{
    ViewBag.Title = "用戶登入";
}

<style>
    .form-group.d-flex label {
        min-width: 100px;
        white-space: nowrap;
    }

    .form-group.d-flex input {
        flex-grow: 1;
    }

    hr {
        margin-bottom: 30px;
    }

    p {
        color: red;
    }
</style>

<h2>用戶登入</h2>

<hr />

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="UserID" class="me-2">手機號碼</label>
        <input name="UserID" class="form-control flex-grow-1" />
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center mb-4">
        <label asp-for="PasswordHash" class="me-2">密碼</label>
        <input name="PasswordHash" type="password" class="form-control flex-grow-1" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-dark mt-3">登入</button>
    <p>@ViewBag.Message</p>
</form>
