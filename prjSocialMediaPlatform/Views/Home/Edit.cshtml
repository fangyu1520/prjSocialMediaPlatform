@model prjSocialMediaPlatform.Models.Post

@{
    ViewBag.Title = "貼文編輯";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>貼文編輯</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PostID)

        <div class="form-group d-flex align-items-center mb-4">
            <label asp-for="Content" class="me-2">文章內容</label>
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control flex-grow-1" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>

        <div class="form-group d-flex align-items-center mb-4">
            <label asp-for="UserID" class="me-2">封面圖片</label>
            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control flex-grow-1" } })
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-outline-dark mt-3" />
            </div>
        </div>
    }
</body>
</html>
